<div class="container">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white rouded-0">
        <h1>Editando</h1>

        <form action="/experiment/{{experiment._id}}/edit" method="POST">
          <div>
            <label for="time1">Tiempo 1</label>
            <input
              type="text"
              name="times"
              placeholder="Tiempo 1"
              value="{{experiment.times.[0]}}"
              class="form-control rounded-0 bg-dark text-white"
            />
            <label for="time1">Tiempo 2</label>
            <input
              type="text"
              name="times"
              placeholder="Tiempo 2"
              value="{{experiment.times.[1]}}"
              class="form-control rounded-0 bg-dark text-white"
            />
            <label for="time1">Tiempo 3</label>
            <input
              type="text"
              name="times"
              placeholder="Tiempo 3"
              value="{{experiment.times.[2]}}"
              class="form-control rounded-0 bg-dark text-white"
            />
            <label for="time1">Tiempo 4</label>
            <input
              type="text"
              name="times"
              placeholder="Tiempo 4"
              value="{{experiment.times.[3]}}"
              class="form-control rounded-0 bg-dark text-white"
            />
          </div>
          <button class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</div>