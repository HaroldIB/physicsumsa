{{#if experiments}}
  <table class="table table-bordered  table-hover table-dark">
    <thead>
      <tr>
        <th>N.</th>
        <th>ID</th>
        <th>Times</th>
        <th>Operations</th>
      </tr>
    </thead>
    <tbody>
      {{#each experiments}}
        <tr>
          <td>
            {{@index}}
          </td>
          <td>{{_id}}</td>
          <td>
            {{#each times}}
              <p id="{{@index}}">{{this}}</p>
            {{/each}}
          </td>
          <td>
            <a href="/experiment/{{_id}}/delete" class="btn btn-danger">Delete</a>
            <a href="/experiment/{{_id}}/edit" class="btn btn-success">Update</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No hay experimentos</h1>
      <img src="/icons/empty.svg" class="w-75">
    </div>
  </div>
{{/if}}